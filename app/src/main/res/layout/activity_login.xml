<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SharedActivities.LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/somo_logo"
        android:contentDescription="@string/login_logo_desc"
        >
    </ImageView>

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textColor="@color/hot_pink"
        android:textSize="18sp"
        android:text="@string/txt_login_header"
        android:fontFamily="sans-serif-condensed-medium"
        android:visibility="gone"
        >

    </TextView>

    <!-- Account type  tabs-->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:background="@color/white"
        app:tabTextColor="@color/teal_700"
        app:tabSelectedTextColor="@color/hot_pink"
        android:layout_below="@id/logo"
        >

    </com.google.android.material.tabs.TabLayout>

    <!-- View Pager -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tabLayout">

    </androidx.viewpager2.widget.ViewPager2>



</RelativeLayout>