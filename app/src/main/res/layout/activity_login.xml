<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SharedActivities.LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/somo_logo"
        android:contentDescription="@string/login_logo_desc"
        >
    </ImageView>



    <!-- Email-->
    <EditText
        android:id="@+id/edtAdminEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/curved_edt_border"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Email"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textColorHint="@color/black"
        android:inputType="textEmailAddress"
        android:fontFamily="sans-serif-condensed-light"
        android:padding="16dp"
        android:layout_marginTop="70dp"
        android:layout_below="@id/logo"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <!-- Password-->
    <EditText
        android:id="@+id/edtAdminPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/curved_edt_border"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Password"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textColorHint="@color/black"
        android:fontFamily="sans-serif-condensed-light"
        android:inputType="textPassword"
        android:padding="16dp"
        android:layout_below="@id/edtAdminEmail"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <!-- Forgot password-->
    <RelativeLayout
        android:id="@+id/lytForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@id/edtAdminPassword"
        android:layout_marginTop="10dp"
        android:gravity="end"
        >

        <!-- Forgot password -->
        <TextView
            android:id="@+id/txtForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:textColor="@color/light_blue_900"
            android:textSize="16sp"
            android:text="Forgot Password?"
            android:fontFamily="sans-serif-condensed-light"
            android:layout_marginEnd="20dp">
        </TextView>



    </RelativeLayout>

    <!-- Login Button -->
    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/curved_btn_border"
        android:text="Sign In"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/lytForgotPassword"
        android:fontFamily="sans-serif-condensed-light"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>



</RelativeLayout>