<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SharedFragments.FragmentPg2"
    android:background="@color/white"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Challenges Encountered"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="17sp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/challenges_encountered_des"
        android:textColor="@color/teal_700">

    </TextView>

    <EditText
        android:id="@+id/edtChallenges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="4"
        android:layout_marginTop="10dp"
        android:ems="10">

    </EditText>


    <!--Students engagement-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Support and Guidance Provided"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginTop="20dp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/support_guidance_desc"
        android:textColor="@color/teal_700">

    </TextView>

    <EditText
        android:id="@+id/edtSupport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="4"
        android:layout_marginTop="10dp"
        android:ems="10">

    </EditText>

    <!-- Save button -->
    <TextView
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="15dp"
        android:textSize="17sp"
        android:textStyle="italic"
        android:textColor="@color/purple_200"
        android:text="Save"
        android:padding="8dp">

    </TextView>


</LinearLayout>